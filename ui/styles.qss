    font-size: 14px;
}

/* ğŸŸ¦ Buttons */
QPushButton {
    background-color: #3b82f6;
    color: white;
    border-radius: 14px;
    padding: 12px;
    font-size: 15px;
    font-weight: bold;
}

QPushButton:hover {
    background-color: #2563eb;
}

QPushButton:pressed {
    background-color: #1e40af;
}
